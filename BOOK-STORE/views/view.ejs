<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Books</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
    <h2 class="text-center">View Books</h2>
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Price</th>
            <th>Pages</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% books.forEach((book, index) => { %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= book.book_name %></td>
                <td><%= book.book_price %></td>
                <td><%= book.book_pages %></td>
                <td><%= book.book_author %></td>
                <td>
                    <a href="/editbook?id=<%= book._id %>" class="btn btn-warning btn-sm">Edit</a>
                    <a href="/deletebook?id=<%= book._id %>" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
    <a href="/add" class="btn btn-primary">Add Book</a>
</div>
</body>
</html>
